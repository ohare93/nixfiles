{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": true,
    "excludedCommands": [
      "nix",
      "nix-build",
      "nix-shell",
      "nix-instantiate",
      "nix-store",
      "nix-env",
      "nix-channel",
      "nix-collect-garbage",
      "nh"
    ],
    "network": {
      "allowedDomains": [
        "cache.nixos.org",
        "channels.nixos.org",
        "releases.nixos.org",
        "nix-community.cachix.org",
        "cachix.cachix.org"
      ],
      "allowUnixSockets": ["/run/user/1000/gnupg/S.gpg-agent.ssh"]
    }
  },
  "permissions": {
    "allow": [
      "Bash(jj:*)",
      "Bash(nix:*)",
      "Bash(nix-instantiate:*)",
      "Bash(nix-shell:*)",
      "Bash(nix-store:*)",
      "Bash(nix-build:*)",
      "Bash(nh:*)",
      "Bash(home-manager build:*)",
      "Bash(home-manager generations:*)",
      "Bash(alejandra:*)",
      "Bash(statix:*)",
      "Bash(deadnix:*)",
      "Bash(hostname)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(wc:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(readlink:*)",
      "Bash(echo:*)",
      "Bash(ps:*)",
      "Bash(pgrep:*)",
      "Bash(xargs:*)",
      "Bash(systemctl:*)",
      "Bash(journalctl:*)",
      "Bash(hyprctl:*)",
      "Bash(hyprshot:*)",
      "Bash(espanso log:*)",
      "Bash(zellij:*)",
      "Bash(curl:*)",
      "Bash(skopeo:*)",
      "Bash(ntfy sub:*)",
      "Bash(nixos-update-checker)",
      "Bash(bnup)",
      "Bash(nrb)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:nixos.org)",
      "WebFetch(domain:nixos.wiki)",
      "WebFetch(domain:wiki.nixos.org)",
      "WebFetch(domain:search.nixos.org)",
      "WebFetch(domain:discourse.nixos.org)",
      "WebFetch(domain:nix-community.github.io)",
      "WebFetch(domain:notashelf.github.io)",
      "WebFetch(domain:notashelf.dev)",
      "WebFetch(domain:nvf.notashelf.dev)",
      "WebFetch(domain:home-manager-options.extranix.com)",
      "WebFetch(domain:cachix.org)",
      "WebFetch(domain:wiki.hyprland.org)",
      "WebFetch(domain:wiki.hypr.land)",
      "WebFetch(domain:jj-vcs.github.io)",
      "WebFetch(domain:yazi-rs.github.io)",
      "WebFetch(domain:zellij.dev)",
      "WebFetch(domain:mynixos.com)",
      "WebFetch(domain:www.nushell.sh)",
      "WebFetch(domain:ntfy.sh)",
      "WebFetch(domain:docs.ntfy.sh)",
      "WebFetch(domain:docs.unraid.net)",
      "WebFetch(domain:releases.unraid.net)",
      "WebFetch(domain:docs.karakeep.app)",
      "WebFetch(domain:www.npmjs.com)",
      "WebFetch(domain:deepwiki.com)",
      "WebFetch(domain:forums.raspberrypi.com)",
      "WebFetch(domain:unix.stackexchange.com)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:gitlab.com)",
      "Read(//home/jmo/.claude/**)",
      "Read(//nix/store/**)",
      "mcp__unraid-ssh__docker_logs",
      "mcp__unraid-ssh__docker_list_containers",
      "Skill(superpowers:systematic-debugging)"
    ],
    "deny": [
      "Bash(jj git push:*)",
      "Bash(nh os switch:*)",
      "Bash(nh os switch)"
    ]
  }
}
